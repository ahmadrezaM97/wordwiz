{
  "manifest_version": 2,
  "name": "Word Saver",
  "version": "1.0",
  "description": "Select and save words from webpages",
  "permissions": ["activeTab", "contextMenus", "tabs"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "web_accessible_resources": ["overlay.html"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
